<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sisvac_vaccination_wizard_form" model="ir.ui.view">
            <field name="name">SISVAC Vaccination Wizard Form</field>
            <field name="model">sisvac.vaccination.wizard</field>
            <field name="arch" type="xml">
                <form string="Vaccinations">
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="lots"/>
                            <field name="vaccinator_id"/>
                        </group>
                        <group>
                            <field name="got_symptoms"/>
                            <field name="symptoms" attrs="{'invisible':[('got_symptoms','=', False)]}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="put_vaccine" type="object"
                                string="Put Vaccine" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>