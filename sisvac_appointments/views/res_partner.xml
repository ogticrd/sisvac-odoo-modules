<odoo>
    <data>
        <record id="sisvac_patient_vaccine_button_form" model="ir.ui.view">
            <field name="name">SISVAC Patient Form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div" position="replace"/>
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="action" name="%(action_sisvac_calendar_event)d"
                        attrs="{'invisible': [('vaccine_appointment_count', '=', 0)]}" icon="fa-medkit"
                        context="{'search_default_patient_id': active_id, 'default_patient_id': active_id}">
                        <field string="Vaccines" name="vaccine_appointment_count" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>