<odoo>
    <data>
        <record id="sisvac_calendar_event_tree" model="ir.ui.view">
            <field name="name">SISVAC Calendar Event Tree</field>
            <field name="model">calendar.event</field>
            <field name="arch" type="xml">
                <tree string="Vaccinations">
                    <field name="name" string="Appointment Number"/>
                    <field name="patient_id"/>
                    <field name="start"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="sisvac_calendar_event_form" model="ir.ui.view">
            <field name="name">SISVAC Calendar Event Form</field>
            <field name="model">calendar.event</field>
            <field name="arch" type="xml">
                <form string="Vaccinations">
                    <header>
                        <button name="action_put_vaccine" string="Put vaccine" type="object" states="pending" icon="fa-medkit"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <field name="res_model" invisible="1" />
                        <field name="res_id" invisible="1" />
                        <field name="attendee_status" invisible="1"/>
                        <field name="active" invisible="1"/>
                        <div class="oe_title">
                            <label for="appointment_number"/>
                            <h1>
                                <field name="appointment_number"/>
                            </h1>
                        </div>
                        <group name="group_a">
                            <group>
                                <field name="patient_id" 
                                        attrs="{'required': 1, 'readonly': [('state', '=', 'done')]}"/>
                                <field name="start" string="Starting at" 
                                        attrs="{'required': 1, 'readonly': [('state', '=', 'done')]}"/>
                                <field name="vaccinator_id"/>
                            </group>
                            <group>
                                <field name="patient_image" widget="image" options="{'size': [90, 90]}"/>
                                <field name="patient_vat"/>
                            </group>
                        </group>
                        <group name="group_b">
                            <group>
                                <field name="lots"/>
                                <field name="patient_sign"/>
                                <field name="got_symptoms"/>
                                <field name="symptoms_notes" attrs="{'invisible':[('got_symptoms','=', False)]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sisvac_calendar_event_search" model="ir.ui.view">
            <field name="name">SISVAC Calendar Event Search</field>
            <field name="model">calendar.event</field>
            <field name="arch" type="xml">
                <search string="Vaccinations">
                    <field name="name" string="Appointment Number"/>
                    <field name="patient_id"/>
                    <field name="state"/>

                    <group expand="0" string="Group By">
                        <filter string="Patient" name="patient" domain="[]" context="{'group_by': 'patient_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_sisvac_calendar_event" model="ir.actions.act_window">
            <field name="name">Vaccinations</field>
            <field name="res_model">calendar.event</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="search_view_id" ref="sisvac_calendar_event_search"/>
            <field name="domain">[('vaccination_appointment', '=', True)]</field>
            <field name="context">{'default_vaccination_appointment': True}</field>
        </record>

        <record id="action_sisvac_calendar_event_tree" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_sisvac_calendar_event"/>
            <field name="sequence" eval="2"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="sisvac_calendar_event_tree"/>
        </record>

        <record id="action_sisvac_calendar_event_form" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_sisvac_calendar_event"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sisvac_calendar_event_form"/>
        </record>

        <menuitem
            id="sisvac_primary_menu_vaccination"
            name="Vaccinations"
            sequence="2"
            web_icon="calendar,static/description/icon.png"/>
        
        <menuitem
            id="sisvac_secondary_menu_vaccination"
            name="Vaccinations"
            sequence="2"
            parent="sisvac_primary_menu_vaccination"
            action="action_sisvac_calendar_event"/>
    </data>
</odoo>