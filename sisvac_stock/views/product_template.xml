<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sisvac_vaccine_tree" model="ir.ui.view">
        <field name="name">SISVAC Vaccine Tree</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <tree string="Vaccines">
                <field name="name" string="Vaccine"/>
            </tree>
        </field>
    </record>

    <record id="sisvac_vaccine_form" model="ir.ui.view">
        <field name="name">SISVAC Vaccine Form</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <form string="Vaccines">
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"
                           options="{'preview_image': 'image_128'}"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="dose_qty"/>
                            <label for="time_between_dose"
                                   attrs="{'invisible':[('dose_qty','=', 1)]}"/>
                            <div attrs="{'invisible':[('dose_qty','=', 1)]}">
                                <field name="time_between_dose"
                                       style="width: 15% !important" class="oe_inline"/>
                                <span class="o_form_label"
                                      style="width: 2% !important"></span> <!-- Make a little space. -->
                                <field name="unit_time_between_dose"
                                       style="width: 80% !important;"
                                       class="oe_inline"/>
                            </div>
                            <label for="frequency"/>
                            <div>
                                <field name="frequency" style="width: 15% !important"
                                       class="oe_inline"/>
                                <span class="o_form_label"
                                      style="width: 2% !important"></span> <!-- Make a little space. -->
                                <field name="unit_frequency"
                                       style="width: 80% !important;"
                                       class="oe_inline"/>
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sisvac_vaccine_search" model="ir.ui.view">
        <field name="name">SISVAC Vaccine Search</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <search string="Vaccines">
                <field name="name" string="Vaccine"/>
                <field name="dose_qty"/>

                <group expand="0" string="Group By">
                    <filter string="Dose Qty" name="dose_qty" domain="[]"
                            context="{'group_by': 'dose_qty'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_sisvac_vaccine" model="ir.actions.act_window">
        <field name="name">Vaccines</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="sisvac_vaccine_search"/>
        <field name="domain">[('is_vaccine', '=', True)]</field>
        <field name="context">{'default_is_vaccine': True}</field>
    </record>

    <record id="action_sisvac_vaccine_tree" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="action_sisvac_vaccine"/>
        <field name="sequence" eval="2"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sisvac_vaccine_tree"/>
    </record>

    <record id="action_sisvac_vaccine_form" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="action_sisvac_vaccine"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sisvac_vaccine_form"/>
    </record>

    <menuitem
        id="sisvac_primary_menu_vaccines"
        name="Vaccines"
        sequence="10"
        web_icon="calendar,static/description/icon.png"/>

    <menuitem
        id="sisvac_secondary_menu_vaccines"
        name="Vaccines"
        sequence="10"
        parent="sisvac_primary_menu_vaccines"
        action="action_sisvac_vaccine"/>
</odoo>
