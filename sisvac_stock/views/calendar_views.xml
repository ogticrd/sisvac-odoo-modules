<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sisvac_calendar_event_tree_inherited" model="ir.ui.view">
        <field name="name">SISVAC Calendar Event Tree</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="sisvac_appointments.sisvac_calendar_event_tree"/>
        <field name="arch" type="xml">
            <field name="start" position="after">
                <field name="product_id"/>
            </field>
        </field>
    </record>

    <record id="sisvac_calendar_event_form_inherited" model="ir.ui.view">
        <field name="name">SISVAC Calendar Event Form</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="sisvac_appointments.sisvac_calendar_event_form"/>
        <field name="arch" type="xml">
            <field name="start" position="after">
                <field name="product_id"/>
            </field>
            <field name="lots" position="before">
                <field name="product_id"/>
            </field>
            <xpath expr="//field[@name='lots']" position="attributes">
                <attribute name="attrs">{'invisible':[('product_id','=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='got_symptoms']" position="attributes">
                <attribute name="attrs">{'invisible':[('product_id','=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='symptoms']" position="attributes">
                <attribute name="attrs">{'invisible':['|', ('got_symptoms','=', False), ('product_id','=', False)]}</attribute>
            </xpath>
            <xpath expr="//group[@name='group_b']/group" position="after">
                <group>
                    <field name="product_image" widget="image" options="{'size': [90, 90]}"/>
                    <field name="product_dose_qty"/>
                    <label for="product_time_between_dose"/>
                    <div>
                        <field name="product_time_between_dose" style="width: 10% !important" class="oe_inline"/>
                        <span class="o_form_label" style="width: 2% !important">   </span> <!-- Make a little space. -->
                        <field name="product_unit_time_between_dose" style="width: 48% !important;" class="oe_inline"/>
                    </div>
                    <label for="product_frequency"/>
                    <div>
                        <field name="product_frequency" style="width: 10% !important" class="oe_inline"/>
                        <span class="o_form_label" style="width: 2% !important">   </span> <!-- Make a little space. -->
                        <field name="product_unit_frequency" style="width: 48% !important;" class="oe_inline"/>
                    </div>
                </group>
            </xpath>
        </field>
    </record>

    <record id="sisvac_calendar_event_search_inherited" model="ir.ui.view">
        <field name="name">SISVAC Calendar Event Search</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="sisvac_appointments.sisvac_calendar_event_search"/>
        <field name="arch" type="xml">
            <field name="patient_id" position="after">
                <field name="product_id"/>
            </field>
            <filter name="vaccine" position="after">
                <filter string="Vaccine" name="vaccine" domain="[]" context="{'group_by': 'product_id'}"/>
            </filter>
        </field>
    </record>
</odoo>